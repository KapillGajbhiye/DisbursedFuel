<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/boxStrokeColor"
        android:backgroundTint="@color/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- First Horizontal StackView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Vehicle Number StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Vehicle Number Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="Vehicle Number"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Vehicle Number Label -->
                    <TextView
                        android:id="@+id/vehicleNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="HR55AF893U"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Vehicle Type StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Vehicle Type Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="@string/vehicle_type"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Vehicle Type Label -->
                    <TextView
                        android:id="@+id/vehicleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="32FTXcl"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- OEM StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- OEM Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="Fuel Type"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- OEM Label -->
                    <TextView
                        android:id="@+id/fuelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Disel"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Second Horizontal StackView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Fleet Manager StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Fleet Manager Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="Fuel Quantity"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Fleet Manager Label -->
                    <TextView
                        android:id="@+id/fuelQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="500L"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Driver Name StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Driver Name Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="Requested By"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Driver Name Label -->
                    <TextView
                        android:id="@+id/requestedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Aflaq Khan"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Third Horizontal StackView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Driver Name StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Driver Name Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="Driver Name"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Driver Name Label -->
                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Driver Number StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Driver Number Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="Driver Number"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Driver Number Label -->
                    <TextView
                        android:id="@+id/driverNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Fourth Horizontal StackView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Date and Time StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Date and Time Heading Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="4dp"
                        android:text="Date and Time"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Date and Time Label -->
                    <TextView
                        android:id="@+id/dateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="No Remark"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Company Name StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Company Name Heading Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:text="Company Name"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <!-- Company Name Label -->
                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:textAlignment="center"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Update Icon StackView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/update_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/verified" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>